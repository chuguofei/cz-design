{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "esModuleInterop": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./"
  },
  "include": [
    "packages/cz-design/src/**/*.ts",
    "packages/cz-design/src/**/*.d.ts",
    "packages/cz-design/src/**/*.tsx",
    "packages/cz-design/src/**/*.vue",
    "packages/cz-component/**/*.vue",
    "packages/cz-component/**/*.tsx"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
